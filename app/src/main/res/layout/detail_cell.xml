<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/detail_cell_title"
        android:gravity="center|left"
        android:text="+ 52 (449) 467 4121"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/detail_cell_description"
        android:gravity="center|left"
        android:text="Phone number"
        android:textSize="12sp"
        android:textColor="@color/hintText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/detail_cell_title"
        android:layout_alignLeft="@+id/detail_cell_title"
        android:layout_alignStart="@+id/detail_cell_title" />

</RelativeLayout>