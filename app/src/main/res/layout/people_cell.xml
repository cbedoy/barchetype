<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <ImageView
        android:padding="12dp"
        android:src="@drawable/favorite_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/people_view_cell_favorite"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:background="@color/backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="66dp"
        android:layout_alignBottom="@+id/people_view_cell_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/people_view_cell_divider" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/profile"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/people_view_cell_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Carlos Bedoy"
        android:gravity="center|left"
        android:textStyle="normal"
        android:textColor="@color/primaryText"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/people_view_cell_username"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/people_view_cell_divider"
        android:layout_alignStart="@+id/people_view_cell_divider"
        android:layout_toLeftOf="@+id/people_view_cell_favorite"
        android:layout_toStartOf="@+id/people_view_cell_favorite"
        android:layout_above="@+id/people_view_cell_divider" />

</RelativeLayout>